<h2 class="mt-3">Lista de categorias</h2>
<hr>
<a href="/admin/categorias/add"><button class="mt- mb-4 btn btn-success">Nova categoria</button></a>
{{#each categorias}}
    <div class="card mt-3">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>Slug: {{slug}}</small><br>
            <small>Data: {{date}}</small>
            <br>
            <a href="/admin/categorias/edit/{{id}}"><button class="mt-4 float-right btn btn-success" class="editarCategoria">Editar</button></a>
            <form action="/admin/categorias/delete" method="POST">
            <input type="hidden" name="id" value="{{_id}}">
                <button class="btn btn-danger mt-4" class="editarCategoria">Excluir</button>
            </form>
        </div>
    </div>
{{else}}
<h3 class="mt-3">Nenhuma categoria registrada</h3>
{{/each}}
